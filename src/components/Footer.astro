---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
const email = "contact@example.com";
const githubRepoUrl = "https://github.com/sas-news/homepage";
---

<footer>
    <div class="footer-container">
        <div class="about">
            <h3>SAS新聞</h3>
            <p>Web Developer / Student</p>
        </div>
        <div class="contact">
            <h3>Contact</h3>
            <a href="mailto:{email}">{email}</a>
        </div>
        <div class="repository">
            <h3>Repository</h3>
            <a href={githubRepoUrl} target="_blank" rel="noopener noreferrer">
                <Icon name="simple-icons:github" />&nbsp;GitHub
            </a>
        </div>
    </div>
    <div class="copyright">
        <p>&copy; {currentYear} sas-news.<wbr /> All rights reserved.</p>
    </div>
</footer>
<style>
    footer {
        background-color: #f0f0f0;
        margin-top: 3rem;
        padding: 3rem 5%;
    }

    .footer-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
        margin-inline: auto;
        padding-inline: 5%;
    }

    h3 {
        font-size: 1.2rem;
        margin-bottom: 0.75rem;
    }
    p,
    a {
        color: #555;
        display: inline-flex;
        align-items: center;
    }

    a {
        text-decoration: none;
        transition: color 0.3s;
        &:hover {
            color: #000;
        }
    }

    .copyright {
        border-top: 1px solid #ddd;
        padding-top: 3rem;
        font-size: 0.9rem;
        text-align: center;
    }
    @media (prefers-color-scheme: dark) {
        footer {
            background-color: #1e1e1e;
        }
        .footer-container {
            & > div {
                max-width: 100%;
            }
        }
        h3 {
            color: #eee;
        }
        p,
        a {
            color: #aaa;
        }
        a {
            &:hover {
                color: #fff;
            }
        }
</style>
